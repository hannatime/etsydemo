<div class="center">
  <h2>Your Sales History</h2>
</div>

<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Borrower</th>
    <th class="center">Value</th>
    <th class="center">Date Lent</th>
    <th class="center">Interest %</th>
    <th class="center">Action %</th>
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td class="center"><%= order.buyer.name %></td>
      <td class="center"><%= number_to_currency(order.listing.price) %></td>
      <td class="center"><%= order.created_at.strftime("%B %-d, %Y") %></td>
      <td class="center"><%= %></td>
      <td class="center"><%= link_to "View", @order, class: "btn btn-sm btn-default" %></td>
    </tr>
  <% end %>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Note', new_listing_path, class: "btn btn-link" %>
<% end %>